html, body, header, div, nav, ul, li, a, h1, h2, h3, h4, img, input, p, span, footer, button, form
    padding 0
    margin 0
    border 0
    box-sizing border-box
    user-select none

a
    text-decoration none
    color inherit
    &:visited
        color inherit

html
    background-image:  url(../images/pattern.png)
    font-size: 13px
    font-family: Arial, Helvetica, sans-serif

.wrapper 
    width 1100px
    margin 0 auto

.flex-col
    display flex
    flex-direction column

button
    cursor pointer

body 
    header
        div 
            height 100px
            font-size 18px
            display flex
            justify-content space-between
            >a
                display flex
                align-items center
                padding-left 50px
                h1 
                    font-size 41px
                    color #c34b1f
                    font-weight normal
            li 
                display inline-block
                color #8e8d8d
                line-height 100px
                padding-left 10px
                padding-right 12px
                a
                    padding 10px 5px
                    transition: 0.3s ease-in-out
                    &:hover,&.active
                        background-color #c34b1f
                        color white
            .blue-button
                width 90px
                height 35px
                font-size 18px
                position: relative
                top 50%
                transform translatey(-50%)
                color white 
                background-color #2281bc

    main 
        height 1400px
        background-color white
        box-shadow 0px 0px 20px -5px grey
        position: relative
        &:before
            content: "";
            width: 1080px;
            height: 15px;
            border: 2px solid #eaeae8;
            border-top: 0;
            box-sizing: border-box;
            background-color: white;
            opacity: 0.8
            position: absolute;
            bottom: -15px;
            left: 10px;
            z-index: -1;
        &:after
            content: "";
            width: 1060px;
            height: 10px;
            border: 2px solid #eaeae8;
            border-top: 0;
            box-sizing: border-box;
            background-color: white;
            opacity: 0.9;
            position: absolute;
            bottom: -25px;
            left: 20px;
            z-index: -2;
        .inside-wrapper
            width 1000px
            margin 0 auto
            .social
                display flex
                justify-content flex-end
                align-items flex-end
                height 35px
                img
                    margin-left 5px
            .art-block
                position relative
                font-size 0
                &:before
                    content: "";
                    width: 46px;
                    height: 443px;
                    background-image: url(../images/shadow-right.png);
                    position: absolute;
                    top: 25px;
                    left: -65px;
                    z-index: -1;
                &:after
                    content: "";
                    width: 46px;
                    height: 443px;
                    background-image: url(../images/shadow-right.png);
                    position: absolute;
                    top: 25px;
                    right: -65px;
                    z-index: -1;
                img
                    margin-top 10px
                .ribbon
                    width 160px
                    height 0
                    position: absolute;
                    top: 50px;
                    right: -10px;
                    z-index 1
                    border-top: 42px solid #aa3003
                    border-bottom: 43px solid #aa3003
                    border-left: 21px solid transparent
                    &:after
                        content: "";
                        border-left: 10px solid #631d03;
                        border-bottom: 10px solid transparent;
                        top: 43px;
                        left: 129px;
                        position: absolute
                    .inside-ribbon
                        width: 148px;
                        height: 0
                        position: absolute;
                        transform: translateX(-12px) translateY(-37px)
                        border-top: 38px solid #ca3601;
                        border-bottom: 38px solid #ca3601;
                        border-left: 18px solid transparent;
                    .ribbon-text
                        justify-content: space-around;
                        align-items: center;
                        overflow: hidden;
                        width: 145px;
                        height: 69px;
                        background-color: transparent;
                        transform: translateY(-34px) translateX(-9px);
                        border-top: 2px dashed #cd5137;
                        border-bottom: 2px dashed #cd5137;
                        color: #fff;
                        font-size: 22px;
                        letter-spacing: -1px;
                        text-shadow: 1px 1px 1px #000;
                        span 
                            margin-left 5px
                        .dots
                            display flex
                            margin-top -20px
                        .single-dot
                            width 12px
                            height 12px
                            background-color #fff 
                            border-radius 50%
                            margin-right 6px
                            &:nth-child(3n)
                                background-color #466788
                .ribbon-shadow
                    width: 25px
                    height: 0
                    position: absolute;
                    top: 52.5px;
                    right: 127px;
                    border-top: 40px solid rgba(136, 144, 154, 0.8)
                    border-bottom: 40px solid rgba(136, 144, 154, 0.8)
                    border-left: 20px solid transparent
                    filter: blur(2px) grayscale(20%)
                .majestic
                    background-image:  url(../images/red-pattern.png)
                    width 450px
                    height 170px
                    position absolute
                    bottom 40px
                    left 20px
                    overflow: hidden
                    justify-content: space-between;
                    padding-left: 15px;
                    padding-top: 23px;
                    padding-bottom: 15px;
                    font-size 14px
                    color #fff
                    a
                        width: 80px
                    h2
                        font-size 32px
                        border-bottom: 1px dashed;
                        width: 385px;
                        font-weight: normal;
                        padding-bottom: 5px;
                    &:after
                        content: "";
                        width 90px
                        height 90px
                        background-image:  url(../images/green-pattern.png)
                        bottom: -48px;
                        right: -50px;
                        transform: rotate(45deg);
                        position: absolute;
                    &:before
                        content url('../images/plus.png')
                        position: absolute
                        bottom: 6px
                        right: 7px
                        z-index 1
            .cards
                display flex
                justify-content space-between
                margin-top 20px
                .single-card
                    width: 315px;
                    height: 315px;
                    border: 1px solid #eaeae8;
                    justify-content: space-between;
                    padding: 15px 10px 15px 10px;
                    position: relative
                    &:after
                        content ""
                        width 295px
                        height 5px
                        border: 1px solid #eaeae8;
                        border-top: 0
                        background-color: #f7f7f6;
                        position: absolute;
                        bottom: 0;
                        transform: translateY(6px);
                    h3
                        font-size: 24px;
                        font-weight: normal;
                        padding-bottom: 5px
                        color: #6b6969;
                        border-bottom: 2px solid #2475ad;
                    .red-button
                        width: 80px;
                        height: 25px;
                        background-color: #c34b1f;
                        color: #fff;
                        font-size: 16px;
                        align-self: flex-end;
            .professionals
                background-image:  url(../images/bckg-prof.png)
                width 1000px
                height 150px
                margin-top 45px
                padding: 10px 25px 25px 25px
                position: relative
                &:before
                    content ""
                    background-image url(../images/left-arrow.png)
                    position: absolute;
                    width: 23px;
                    height: 36px;
                    left: -93px;
                    top: 50%;
                    transform: translateY(-12px)
                &:after
                    content ""
                    background-image url(../images/right-arrow.png)
                    position: absolute;
                    width: 23px;
                    height: 36px;
                    right: -93px;
                    top: 50%;
                    transform: translateY(-12px)
                .prof-header
                    display flex
                    justify-content: space-between
                    border-bottom: 2px solid #2475ad;
                    div
                        position: relative
                        height 25px
                        &:after
                            content ""
                            width 0
                            height 0
                            border-left 8px solid white 
                            border-top 6px solid transparent 
                            border-bottom 6px solid transparent
                            position: absolute;
                            right: 10px;
                            top: 50%;
                            transform: translateY(-6px);  
                    h3
                        font-size: 24px;
                        font-weight: normal;
                        padding-bottom: 5px
                        color: #6b6969;
                    .green-button
                        width: 205px;
                        height: 25px;
                        color: #fff;
                        background-color: #98a408;
                        font-size: 16px;   
                        padding-left: 15px;
                        text-align: left; 
                        letter-spacing: -0.5px;             
                .prof-body
                    display: flex
                    justify-content: space-between
                    margin-top 20px
                    .profile
                        display flex
                        .photo
                            width 80px
                            height 65px
                            background-color white
                            box-shadow: 2px 2px 5px 1px #cdcdcd
                            position relative
                            &:after
                                content: "";
                                width 0
                                height 0
                                border-top: 15px solid transparent;
                                border-left: 15px solid #98a408;
                                border-bottom: 15px solid transparent;
                                border-right: 15px solid transparent;
                                transform: rotate(45deg);
                                position: absolute;
                                bottom: -15px;
                                right: -15px;
                            &:before
                                content: "+";
                                color: white;
                                position: absolute;
                                bottom: 0;
                                right: 2px;
                                z-index: 1;
                        .info
                            margin-left 15px
                            h4
                                font-size: 18px;
                                font-weight: normal;
                                color: #a72b2a;
                            li
                                list-style: none
                                position: relative
                                letter-spacing: -0.5px;
                                &:last-child:after
                                    content: "";
                                    width: 0;
                                    height: 0;
                                    border-left: 6px solid #a72b2a;
                                    border-top: 4px solid transparent;
                                    border-bottom: 4px solid transparent;
                                    position: absolute;
                                    top: 50%;
                                    transform: translateY(-4px);
                                    margin-left: 5px;;
            .benefits
                width: 100%;
                height: 245px;
                margin-top 50px
                display: flex;
                justify-content: space-between;
                h3
                    height 40px
                    font-size 28px
                    font-weight normal
                    text-align: center
                    letter-spacing: 2px;
                    color #c34b1f
                .single-benefit
                    width 333px
                    border-right 2px dashed #dfdddd
                    position: relative
                    &:first-child
                        .bnf-body:before
                            content: "";
                            width: 10px;
                            height: 10px;
                            background-color: #2475ad;
                            border-radius: 50%;
                            position: absolute;
                            top: -6px;
                            left: -15px;
                        .bnf-body:after
                            content: "";
                            width: 10px;
                            height: 10px;
                            background-color: #2475ad;
                            border-radius: 50%;
                            position: absolute;
                            bottom: -6px;
                            left: -15px;
                    &:last-child
                        border-right: none
                        .bnf-body:before
                            content: "";
                            width: 10px;
                            height: 10px;
                            background-color: #2475ad;
                            border-radius: 50%;
                            position: absolute;
                            top: -6px;
                            right: -15px;
                        .bnf-body:after
                            content: "";
                            width: 10px;
                            height: 10px;
                            background-color: #2475ad;
                            border-radius: 50%;
                            position: absolute;
                            bottom: -6px;
                            right: -15px;
                    &:nth-child(2):before
                        content: "";
                        width: 10px;
                        height: 10px;
                        background-color: #2475ad;
                        border-radius: 50%;
                        position: absolute;
                        top: -15px;
                        left: -6px;
                    &:nth-child(2):after
                        content: "";
                        width: 10px;
                        height: 10px;
                        background-color: #2475ad;
                        border-radius: 50%;
                        position: absolute;
                        bottom: -15px;
                        left: -6px;
                    &:nth-child(3):before
                        content: "";
                        width: 10px;
                        height: 10px;
                        background-color: #2475ad;
                        border-radius: 50%;
                        position: absolute;
                        top: -15px;
                        left: -6px;
                    &:nth-child(3):after
                        content: "";
                        width: 10px;
                        height: 10px;
                        background-color: #2475ad;
                        border-radius: 50%;
                        position: absolute;
                        bottom: -15px;
                        left: -6px;
                    .bnf-body
                        height 190px
                        display flex
                        justify-content: space-evenly
                        align-items center
                        border-top: 2px dashed #dfdddd
                        border-bottom 2px dashed #dfdddd
                        position: relative
                        .circle
                            width 140px
                            height: 140px
                            border-radius 50%
                            position relative
                            img
                                position: absolute;
                                top: 30%;
                                left: 30%;
                            .inside-circle
                                width: 120px;
                                height: 120px;
                                border-radius: 50%;
                                border: 1px solid #fff;
                                position: absolute;
                                top: 10px;
                                left: 10px;
                                opacity: 0.3
                                z-index 1
                            &:before
                                content: "";
                                width: 25px;
                                height: 25px;
                                border-radius: 50%;
                                background-color: inherit;
                                position: absolute;
                                left: 25px;
                            &:after
                                content: "";
                                width: 25px;
                                height: 25px;
                                border-radius: 50%;
                                background-color: inherit;
                                position: absolute;
                                right: 25px;
                                bottom 0
                        .red
                            background-color #c34b1f
                        .blue
                            background-color #2475ad
                        .green
                            background-color #98a408
                        .bnf-content
                            width 140px
                            color #8f8d8d
                            letter-spacing: -0.5px;
                            h4
                                font-size 16px
                                font-weight normal
                                color #6b6969
                            p
                                padding-top 15px
                                padding-bottom: 20px
                            a
                                color #2475ad

                //Start of contact page//
            >h3
                font-size 20px
                text-align: center
                color #2281bc
                padding-top: 50px
                text-transform: uppercase
            >img
                position: absolute;
                left: 0;
                width: 100%;
                margin-top: 50px
            .contact-form
                display flex
                justify-content: space-between
                margin-top: 40%
                font-size 16px
                form
                    display flex
                    flex-wrap wrap
                    width 770px
                    justify-content: space-between
                    .left-fields>label, p
                        line-height: 30px
                        margin-right 10px
                        color #2281bc
                    .left-fields
                        width 50%
                        justify-content: space-between
                        input  
                            width 100%
                            height 30px
                            border 1px solid #ededed
                            border-radius 5px
                        textarea
                            resize none
                            border 1px solid #ededed
                            border-radius 5px
                    .right-fields
                        width 40%
                        justify-content: space-between
                        .contact-ways, .contact-reasons
                            label
                                position: relative
                                left 20px
                            input
                                display none
                                &+label:before
                                    content: "";
                                    width: 15px;
                                    height: 15px;
                                    position: absolute;
                                    top 50%
                                    left -20px
                                    transform: translateY(-50%);
                                    background-color: #fff;
                                    border: 1px solid #c4c4c4;
                                    border-radius 50%
                                &+label:after
                                    content: '•';
                                    position: absolute;
                                    font-size: 20px;
                                    left: -14px;
                                    color: white;
                                    top: -20%;
                                &:checked+label:after
                                    content: '•';
                                    position: absolute;
                                    font-size: 40px;
                                    top: -80%;
                                    left: -18.5px;
                                    color: #2281bc;
                                    transition: all .3s cubic-bezier(0.175, 0.885, 0.320, 1.275)
                        .captcha
                            height 80px
                            background-color #f9f9f9
                            border: 1px solid #d3d3d3;
                            position: relative
                            border-radius 5px
                            img
                                position: absolute
                                right 20px
                                top 10px
                            input
                                display none
                                &+label:before
                                    content: "";
                                    width: 30px;
                                    height: 30px;
                                    position: absolute;
                                    left: -40px;
                                    top: 50%;
                                    transform: translateY(-50%);
                                    background-color: #fff;
                                    border: 2px solid #c4c4c4;
                                    transition: all 0.5s;
                                &:checked+label:before
                                    display none
                                &:checked+label:after
                                    content: '✔'
                                    position: absolute;
                                    left: -35px;
                                    font-size: 30px;
                                    top: 50%;
                                    transform: translateY(-50%);
                                    color: #09ad7e;
                                    transition: all 0.3s;
                            label
                                color #000
                                position: absolute;
                                top: 50%;
                                left: 55px;
                                transform: translateY(-50%);  
                            p
                                color: #a2a2a2;
                                position: absolute;
                                right: 5px;
                                bottom: 5px;
                                font-size: xx-small; 
                    button
                        width: 40%;
                        height: 50px;
                        border-radius: 5px;
                        color: #fff;
                        margin: 30px auto;
                        background-color: #2281bc;
                        text-transform: uppercase;
                        font-size: 16px;                     
                .map-holder
                    width 180px
                    text-align: center
                    .map
                        border-radius 50%
                    p:nth-child(3n)
                        font-weight bold
            .contact-us
                position: absolute
                bottom 0
                left 0
                justify-content: center
                .single-benefit
                    border-right 0
                    &:before, &:after
                        display none
                .bnf-body
                    flex-direction column
                    h4
                        text-align: center
//End of contact page//
    footer
        width: 1100px;
        height: 95px;
        display: flex;
        justify-content: space-between;
        padding-left: 50px;
        padding-right: 40px;
        align-items: center;
        margin: 45px auto;
        background-color: #fff; 
        border 1px solid #dfdddd
        box-shadow: 1px 0px 10px 0px #dfdddd;    
        letter-spacing 1px                 

                                                            
